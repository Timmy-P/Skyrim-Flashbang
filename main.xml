<mod name="Skyrim Flashbang" global_key="FlashBMemes">
	<AssetUpdates id="Timmy-P/Skyrim-Flashbang" provider="github" branch="master"/>
	<!--File Path-->
	<AddFiles directory="Assets">
		<movie path = "meme" />
	</AddFiles>
	<!--Others-->
	<Hooks>
		<hook file="base.lua" source_file="lib/units/beings/player/playerdamage"/>
		<hook file="base.lua" source_file="core/lib/managers/coreenvironmentcontrollermanager"/>
		<hook file="base.lua" source_file="lib/managers/hudmanager"/>
		<hook file="base.lua" source_file="lib/managers/playermanager"/>
	</Hooks>
	<Localization default="loc_en.json"/>
	<Options>
		<options title_id="FlashBMemes_opt_menu_name" desc_id="FlashBMemes_opt_menu_none" build_items="true">
			<option type="number" min="0" max="1" step="0.1" show_value="true" default_value="1" 
				title_id="FlashBMemes_opt_volume_start" desc_id="FlashBMemes_opt_volume_start_desc" name="__volume_start" 
			/>
		</options>
	</Options>
</mod>